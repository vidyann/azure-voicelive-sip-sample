<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5level: [%logger{36}]: %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Rolling file appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>C:/Users/vinara/voicelive-sip/sample-s2s-voip-gateway/voicelive-gateway.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>voicelive-gateway-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 7 days of history -->
            <maxHistory>7</maxHistory>
            <!-- Max 1GB total size -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5level: [%logger{36}]: %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Root logger - logs to both console and file -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
    
    <!-- Set DEBUG level for our application packages -->
    <logger name="com.example.s2s.voipgateway" level="INFO" />
    
    <!-- Reduce noise from Azure SDK -->
    <logger name="com.azure" level="WARN" />
    <logger name="io.netty" level="WARN" />
    <logger name="reactor.netty" level="WARN" />
</configuration>
